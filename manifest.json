{
  "manifest_version": 2,

  "name": "XMLViewer",
  "description": "View XMLs",
  "version": "1.0",

  "permissions": [
    "tabs",
    "contextMenus",
    "storage"
  ],
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_title": "XMLViewer Popup"
  },
  "web_accessible_resources": [
    "styles/popup.css",
    "images/*"
  ],
  "background": {
    "scripts": ["scripts/background.js"]
  },
  "content_scripts": [
    {
      "css":[
        "styles/content.css", 
        "styles/header.css"
      ],
      "matches": [
        "http://*/*.xml",
        "https://*/*.xml",
        "file:///*.xml"
      ],
      "js": [
        "scripts/constants.js",
        "scripts/content.js",
        "scripts/header.js",
        "scripts/xmlToJson.js",
        "scripts/xPath.js"
      ],
      "run_at": "document_end"
    }
  ]
}