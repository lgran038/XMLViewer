{
  "manifest_version": 2,

  "name": "XMLViewer",
  "description": "View XMLs",
  "version": "1.0",

  "permissions": [
    "tabs",
    "contextMenus",
    "storage"
  ],
  "browser_action": {
    "default_icon": "img/icon.png"
  },
  "web_accessible_resources": [
    "styles/content.css"
  ],
  "background": {
    "scripts": ["scripts/background.js"]
  },
  "content_scripts": [
    {
      "css":["styles/content.css"],
      "matches": [
        "http://*/*.xml",
        "https://*/*.xml",
        "file:///*.xml"
      ],
      "js": ["scripts/content.js"],
      "run_at": "document_end"
    }
  ]
}